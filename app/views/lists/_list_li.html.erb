  <!-- add strikethrough styling to class of item, if complete -->
  <%= li_for_item(item) do %> 
    <div class="view"> 
    <!-- check_box form to POST lists/:list_id/items/:id ; items#update -->
      <%= form_for_item_status(item) %>

      <label><%= item.description %></label>
      <%= form_tag(list_item_path(item.list, item)) do %>
        <input type="hidden" name="_method" value="DELETE" />
        <button type="submit" class="destroy"></button>
      <% end %>
    
    </div>
  <% end %>
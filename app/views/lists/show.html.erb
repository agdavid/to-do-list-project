<section class="todoapp">
  <header class="header">
    <h1><%= @list.name %></h1>
    <!-- New Item Form in lists/show for nested resource item in lists -->
    <%= form_for([@list, @item]) do |f|%>
    <%= f.text_field :description, :class => "new-todo", :placeholder => (@item.errors.full_messages_for(:description).first || "Enter a new item...")%>
    <%= f.submit :style => "display: none" %>
    <% end %>
  </header> <!-- close .header -->
  <section class="main">
     <ul class="todo-list">
      <% @list.items.each do |item| %>
        <!-- add strikethrough styling to class if complete -->
         <li class="<%= "completed" if item.complete? %>"> 
           <div class="view"> 
            <!-- check_box form to POST lists/:list_id/items/:id ; items#update -->
            <%= form_for([@list, item]) do |f| %>
              <%= f.check_box :status, :class => "toggle", :checked => (true if item.complete?)%>
            <% end %>

            <label><%= item.description %></label>
          </div>
        </li>
      <% end %>
    </ul> 
  </section>  <!-- close .main -->
  <footer class="footer">
  </footer>
</section> <!-- close .todoapp -->
